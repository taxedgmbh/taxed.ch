# Taxed.ch Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Firebase Configuration (Frontend)
# ============================================
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Optional: Firebase Functions Region (default: us-central1)
VITE_FIREBASE_FUNCTIONS_REGION=europe-west1

# Optional: Firebase Analytics
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ============================================
# Backend Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASS=your-secure-password

# ============================================
# API Configuration
# ============================================
VITE_API_BASE_URL=https://taxed.ch/backend

# ============================================
# AI Provider Configuration (Optional)
# Used for blog generation and content features
# ============================================
VITE_AI_PROVIDER=openai
VITE_OPENAI_API_KEY=your-openai-api-key
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_CLAUDE_API_KEY=your-claude-api-key
VITE_HUGGINGFACE_API_KEY=your-huggingface-api-key
