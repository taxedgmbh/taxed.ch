{
  "name": "apple-design-validator-server",
  "version": "1.0.0",
  "description": "Autonomous Apple Design Validator Agent - 24/7 Server",
  "type": "module",
  "main": "agent-server.js",
  "scripts": {
    "start": "node agent-server.js",
    "dev": "nodemon agent-server.js",
    "docker:build": "docker build -t apple-design-validator -f Dockerfile ..",
    "docker:run": "docker run -p 3000:3000 --env-file .env apple-design-validator",
    "deploy:aws": "node deploy-aws.js",
    "deploy:gcp": "gcloud run deploy apple-design-validator --source .",
    "test": "node --test"
  },
  "keywords": [
    "apple",
    "design",
    "hig",
    "autonomous",
    "agent",
    "playwright",
    "testing"
  ],
  "author": "Taxed GmbH",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "express": "^4.18.0",
    "dotenv": "^16.0.0",
    "@octokit/rest": "^20.0.0",
    "simple-git": "^3.19.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
