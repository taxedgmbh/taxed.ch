# Redirect all requests to dist/ folder for Hostinger deployment
# This ensures the built production files are served instead of source files

RewriteEngine On
RewriteBase /

# Don't rewrite backend requests - serve PHP directly
RewriteCond %{REQUEST_URI} ^/backend/
RewriteRule ^ - [L]

# Don't rewrite if already accessing dist/
RewriteCond %{REQUEST_URI} !^/dist/

# Rewrite everything else to dist/
RewriteRule ^(.*)$ dist/$1 [L]
